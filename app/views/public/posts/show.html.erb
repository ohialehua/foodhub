  <div class='row'>
    <div class='col-md-4'>
      <% if @post.enduser_id.present? %>
        <%= render 'public/endusers/show', enduser: @enduser %>
        <%= render 'public/endusers/followings', followings: @followings %>
        <%= render 'public/endusers/followers', followers: @followers %>
      <% else %>
        <%= render 'public/stores/show', store: @store, genres: @genres %>
      <% end %>
    </div>

    <div class='col-md-8'>
      <h2>Post detail</h2>
      <div class="row">
  		  <% if @post.enduser_id.present? %>
        <div class="col-lg-6 pl-5 text-center">
          <div class="text-right d-inline-flex">
            <h4 class="comments_count">コメント数: <%= @post.post_comments.count %></h4>
            <h4>
              <div class="favorite-btn_<%= @post.id %> mx-3">
                <%= render 'public/favorites/favorite-btn', post: @post %>
              </div>
            </h4>
            <!--<p>閲覧数: %=@post.impressions_count %></p>-->
          </div>
          <br>
          <%= attachment_image_tag @post, :post_image, size: "300x300", fallback: "no_image.png" %><br>
          <% if @enduser == current_enduser %>
            <p class="text-right mt-2 mr-5"><%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}"%></p>
          <% end %>
        </div>
        <div class="col-lg-5 offset-1">
          <h4><strong>内容</strong></h4>
          <div class="m-3">
            <h4><%= @post.body %></h4>
          </div>
        </div>
        <div class="col-lg-12 text-right d-inline-flex">
          <div class="col-9">
            <%= link_to "投稿一覧へ戻る", root_path, class:"btn btn-sm btn-info ml-2 mb-3" %>
          </div>
          <div class="col-2">
            <%= link_to "#{@enduser.name}の詳細ページへ", enduser_path(@enduser), class:"btn btn-sm btn-primary mb-3" %>
          </div>
        </div>
      <% else %>
        <div class="col-md-6 pl-5 text-center">
          <%= attachment_image_tag @post, :post_image, size: "300x300", fallback: "no_image.png" %><br>
          <h4 class="text-right"><span>
            <div class="favorite-btn_<%= @post.id %>">
              <%= render 'public/favorites/favorite-btn', post: @post %>
            </div>
            <p class="comments_count">コメント数: <%= @post.post_comments.count %></p>
            <!--<p>閲覧数: %=@post.impressions_count %></p>-->
          </span></h4>
        </div>
        <div class="col-md-5 offset-1">
          <h4><strong>紹介文</strong></h4>
          <div class="m-3">
            <h4><%= @post.body %></h4>
          </div>
        </div>
        <div class="col-md-12 text-right d-inline-flex">
          <div class="col-10">
            <%= link_to "投稿一覧へ戻る", root_path, class:"btn btn-info ml-4 mb-3" %>
          </div>
          <div class="col-2">
            <%= link_to "#{@store.name}の詳細ページへ", enduser_path(@enduser), class:"btn btn-primary ml-4 mb-3" %>
          </div>
        </div>
      </div>
      <% end %>
      <div class="col-md-11 offset-1 comment_index">
      <h4>Post Comments</h4>
      <table class='table'>
        <tbody>
          <% @post.post_comments.each do |post_comment| %>
          <tr>
            <td>
            <% if post_comment.enduser_id.present? %>
              <%= link_to enduser_path(post_comment.enduser) do %>
                <%= attachment_image_tag(post_comment.enduser, :profile_image, :fill, 100, 100, fallback: "no_image.png", size:'50x50') %><br>
                <%= post_comment.enduser.name %>
              <% end %>
            <% else %>
              <%= link_to store_path(post_comment.store) do %>
                <%= attachment_image_tag(post_comment.store, :profile_image, :fill, 100, 100, fallback: "no_image.png", size:'50x50') %><br>
                <%= post_comment.store.name %>
              <% end %>
            <% end %>
            </td>
            <td><%= post_comment.comment %></td>
            <td>
              <% if post_comment.enduser == current_enduser %>
                <%= link_to 'Destroy', post_post_comment_path(post_comment.post, post_comment), method: :delete, local: true, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
      <%= form_with model:[@post, @comment], local: true do |f| %>
　　　　<%= f.text_area :comment %>
        <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>