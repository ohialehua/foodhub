<div class="container">
  <div class="row">
    <div class="col-11">
    <% if @notifications.exists? %>
      <table class="table table-dark">
      <% @notifications.each do |notification| %>
        <tr>
          <td><%= notification..created_at.strftime('%Y/%m/%d') %></td>
          <td><%= notification.action %></td>
        </tr>
      <% end %>
      </table>
    <% else %>
      <h4>通知はありません</h4>
    <% end %>
    </div>
  </div>
</div>