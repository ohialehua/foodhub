<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-10">
      <div class="row">
        <div class="col-7 text-right">
          <%= attachment_image_tag @item, :image, size: "350x340", fallback: "no_image.png" %>
        </div>
        <div class="col-5 text-center mt-5">
          <h2><%= @item.name %></h2>
          <div>
            <%= @item.body %>
          </div>
          <h4><%= (@item.with_tax_price).to_s(:delmited) %><span>円（税込）</span></h4>
            <% if @item.is_active == true %>
              <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.hidden_field :enduser_id, value: current_enduser.id %>
                <%= f.select :quantity, options_for_select((1..20).to_a), placeholder: "個数選択" %>
                <%= f.submit "カートに入れる", class:"btn btn-info" %>
              <% end %>
            <% else %>
              <h4>販売停止中です</h4>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
