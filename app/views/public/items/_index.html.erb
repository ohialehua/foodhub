<% items.each do |item| %>
<% if item.store.is_deleted == false and item.is_active == true %>
<div class="item col">
  <div class="card mx-auto mt-4 bg-dark text-white">
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, size:"200x200", class:"card-img-top", fallback:"no_image.png" %>
    <% end %>
    <div class="card-body">
      <div class="card-title">
        <%= item.store.name.truncate(12) %> ： <%= link_to item.name, item_path(item), class:"text-white" %>
      </div>
      <div class="card-text text-right">
        <%= (item.with_tax_price).to_s(:delmited) + "円" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>