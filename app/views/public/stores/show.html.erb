<div class="container">
  <div class="row pt-4 pb-5">
    <div class="col-2 p-2">
      <div class="mt-3">
        <table class="table table-borderless table-dark text-center" style="opacity: 0.8;">
          <thead>
            <tr>
              <th class="text-center"><h4>ジャンル</h4></th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-10">
      <h2><%= @store.name %>詳細ページ</h2>
      <h2 class="mt-5 mb-3 text-white text-center" style="background-color: #343a40; opacity: 0.8; width: 150px;">商品一覧</h2>
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-eq-height">
          <% @items.each do |item| %>
             <div class="col">
               <div class="card mx-auto mt-4 bg-dark text-white">
                 <%= link_to item_path(item) do %>
                   <%= attachment_image_tag item, :image, size:"200x200", class:"card-img-top", fallback:"no-img.png" %>
                  <% end %>
                    <div class="card-body">
                      <div class="card-title">
                        <%= link_to item.name, item_path(item), class:"text-white" %>
                      </div>
                        <div class="card-text">
                         <%= (item.with_tax_price).to_s(:delmited) + "円" %>
                        </div>
                    </div>
               </div>
             </div>
          <% end %>
          <div class="d-flex pagenation justify-content-center mt-5 mb-3">
            <%= paginate @items %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

