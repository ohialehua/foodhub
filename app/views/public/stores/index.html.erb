<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <div class="col-2">
      <div class="mt-3">
        <table class="table table-borderless table-dark text-center" style="opacity: 0.8;">
          <thead>
            <tr>
              <th class="text-center"><h4>お気に入り店舗一覧</h4></th>
            </tr>
          </thead>
          <tbody>
          <% @markers.each do |marker| %>
            <tr>
              <td><%= link_to marker.store.name, store_path(marker.store), class:"text-white" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-10">
      <h2 class="mt-5">加盟店一覧</h2>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-eq-height">
      <% @stores.each do |store| %>
        <div class="col">
          <div class="card mx-auto mt-4 bg-dark text-white">
            <%= link_to store_path(store) do %>
              <%= attachment_image_tag store, :profile_image, size:"200x200", class:"card-img-top", fallback:"no_image.png" %>
            <% end %>
            <div class="card-body">
              <div class="card-title d-inline-flex">
                <%= link_to store.name, store_path(store), class:"text-white mr-3" %>
                <% if store.marked_by?(current_enduser) %>
                  <%= link_to store_unmark_path(store), method: :delete, local: true do %>
                    <p style="color: #eeee00">★</p>
                  <% end %>
                <% else %>
                  <%= link_to store_mark_path(store), method: :post, local: true do %>
                    <p>★</p>
                  <% end %>
                <% end %>
              </div>
              <div class="card-text">
                <p>フォロワー数：&ensp;<%= store.markers.count %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>