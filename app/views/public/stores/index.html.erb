<table class='table'>
  <thead>
    <tr>
      <th>店舗画像</th>
      <th>店舗名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= attachment_image_tag(store, :profile_image_id, size:"50x50", fallback: "no_image.png") %></td>
        <td><%= store.name %></td>
        <td><p>フォロワー数:<%= store.markers.count %></p></td>
        <td>
          <% if store.marked_by?(current_enduser) %>
            <%= link_to store_unmark_path(store), method: :delete, local: true do %>
              <p style="color: #eeee00">★</p>
            <% end %>
          <% else %>
            <%= link_to store_mark_path(store), method: :post, local: true do %>
              ★
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', store_path(store) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
