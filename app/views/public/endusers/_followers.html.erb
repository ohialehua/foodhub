<div class="mt-3 mx-auto">
<%= paginate followers, :param_name => 'follower_page' %>
  <table class="table table-borderless table-dark table-hover text-center" style="opacity: 0.8;">
    <tbody>
      <tr>
        <th class="text-center"><h5>followers</h5></th>
      </tr>
    <% followers.each do |follower| %>
      <tr>
        <td>
          <%= attachment_image_tag(follower, :profile_image, size:"30x30", fallback: "no_image.png") %>
          <%= link_to follower.name, enduser_path(follower), class:"text-white" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>