<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @enduser, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image, class: "form-control-file enduser_image" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
    <% if current_enduser.full_name.blank? %>
      <div class="form-group">
        <%= f.label :full_name %>
        <%= f.text_field :full_name, class: "form-control introduction" %>
      </div>
    <% end %>
    <% if current_enduser.full_name_kana.blank? %>
      <div class="form-group">
        <%= f.label :full_name_kana %>
        <%= f.text_field :full_name_kana, class: "form-control introduction" %>
      </div>
    <% end %>
    <% if current_enduser.phone_number.blank? %>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: "form-control introduction" %>
      </div>
    <% end %>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
