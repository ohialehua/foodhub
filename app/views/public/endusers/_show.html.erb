<div class="col-3 d-inline-block mb-3">
  <%= attachment_image_tag(enduser, :profile_image, size:"100x100", fallback: "no_image.png") %>
</div>
<% if current_enduser == enduser %>
  <div class="col-8 d-inline-block text-right">
    <h4 class="">登録情報</h4>
    <%= link_to "編集", edit_enduser_path(enduser), class:"btn btn-primary ml-3" %>
  </div>
<% else %>
  <div class="col-8 d-inline-block text-right">
  <% if current_enduser.follower?(enduser) %>
    <%= link_to "フォローを外す", enduser_relationships_path(enduser.id), class:"btn btn-sm btn-danger", method: :delete %>
  <% else %>
    <%= link_to "フォローする", enduser_relationships_path(enduser.id), class:"btn btn-sm btn-info", method: :post %>
  <% end %>
  </div>
<% end %>
  <div class="col-12 text-right">
    <label>followings : <%= enduser.followings.count %> &ensp;|&ensp; followers : <%= enduser.followers.count %></label>
  </div>
  <table class="table table-borderless table-dark" style="opacity: 0.8;">
    <tr>
      <td>ユーザーネーム</td>
      <td><%= enduser.name %></td>
    </tr>
    <tr>
      <td>紹介文</td>
      <td><%= enduser.introduction %></td>
    </tr>
  </table>