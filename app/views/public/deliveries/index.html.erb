<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3 class="mt-3">配送先登録  / 一覧</h3>
      <div class="mt-5">
        <%= form_with model: @delivery, url: deliveries_path, local:true do |f| %>
          <table class="table table-borderless table-dark" style="opacity: 0.8;">
            <tr class="text-center h4">
              <th colspan = "4">お届け先情報入力欄</th>
            </tr>
            <tr>
              <td colspan="2">郵便番号（ハイフンなし）</td>
              <td><%= f.text_field :post_address,  placeholder:"1234567", class:"text-dark" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="2"><%= f.text_field :address, :size => "50",  placeholder:"モンスターボール1-2-3", class:"text-dark" %></td>
            </tr>
            <tr>
              <td>宛名</td>
              <td><%= f.text_field :name, placeholder:"コダック", class:"text-dark" %></td>
              <td class="text-right" colspan = "2"><%= f.submit "新規登録", class:"btn btn-info" %></td>
            </tr>
          </table>
        <% end %>
      </div>
      <table class="table table-hover table-borderless table-dark w-70 mt-3" style="opacity: 0.8;">
        <thead>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </thead>
        <% @deliveries.each do |delivery| %>
          <tr>
            <td>〒<%= delivery.post_address %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td>
              <%= link_to "編集する", edit_delivery_path(delivery), class:"btn btn-warning" %>
            </td>
            <td>
              <%= link_to "削除する", delivery_path(delivery), method: :delete, "data-confirm" => "本当に削除しますか?👀", class:"btn btn-danger" %>
            </td>
          </tr>
        <% end %>
        <%= paginate @deliveries %>
      </table>
    </div>
  </div>
</div>