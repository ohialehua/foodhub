<div class="container">
  <div class="row">
    <div class="col">
    <h4>投稿一覧</h4>
    <p class="text-right"><%= link_to "新規投稿",new_post_path, class:"btn btn-primary text-black" %></p>
    <!--%= select_tag '', options_for_select([['いいねが多い順','likes'],['閲覧が多い順','PV'],['新しい順','new'],['古い順','old']],-->
      <div class="card-deck py-5 row row-cols-2 row-cols-md-3 row-cols-lg-4 row-eq-height">
      <% @posts.each do |post| %>
      <div class="col">
        <div class="card mx-4 mt-4 shadow-lg">
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :post_image, size:'200x200', class:"card-img-top" %>
          <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-11 mx-auto">
              <p class="card-text">説明：<%= post.body.truncate(9) %></p>
              <div class="d-inline-flex">
              <% if post.enduser_id.present? %>
                <span><i class="fas fa-user"></i> By <%= post.enduser.name %> ｜ </span>
              <% else %>
                <span><i class="fas fa-user"></i> By <%= post.store.name %> ｜ </span>
              <% end %>
                <div class="favorite-btn_<%= post.id %>">
                  <%= render 'public/favorites/favorite-btn', post: post %>
                </div>
              </div>
              <p><%= link_to "#{post.post_comments.count} 件のコメント", post_path(post), class:"text-dark" %></p>
            </div>
          </div>
        </div>
      </div>
      </div>
      <% end %>
      <%= paginate @posts %>
    </div>
  </div>
</div>