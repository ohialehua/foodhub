<div class="row">
  <div class="col m-3">
    <h3 class="">店舗別注文履歴一覧</h3>
		<table class="table table-borderless table-dark mt-5" style="opacity: 0.8;">
		  <thead class="thead-dark">
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>購入店舗名</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
    </thead>
    <tbody>
    <% @store_orders.each do |store_order| %>
    <tr>
      <td><%= store_order.created_at.strftime("%Y/%m/%d") %></td>
      <td>〒<%= store_order.order.post_address %><br>
            <%= store_order.order.address %><br>
            <%= store_order.order.name %><br>
      </td>
      <td>
				<% store_order.order_details.each do |order_detail| %>
				<%= order_detail.item.store.name %></br>
				<% end %>
			</td>
      <td>
				<% store_order.order_details.each do |order_detail| %>
				<%= order_detail.item.name %>×<%= order_detail.order_quantity %></br>
				<% end %>
			</td>
      <td><%= store_order.order.total_price.to_s(:delimited) %>円</td>
      <td><%= link_to "表示する", store_order_path(store_order), class:'btn btn-primary text-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
