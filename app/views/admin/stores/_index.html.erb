<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% stores.each do |store| %>
    <tr>
      <td><%= attachment_image_tag(store, :profile_image, :fill, 100, 100, size:"50x50", fallback: "no_image.png") %></td>
      <td><%= store.name %></td>
    <% if store.is_deleted == true %>
      <td class="text-danger">無効</td>
      <td></td>
    <% else %>
      <td class="text-success">有効</td>
      <td><p>フォロワー数:<%= store.markers.count %></p></td>
    <% end %>
      <td><%= link_to 'Show', admin_store_path(store) %></td>
    </tr>
  <% end %>
  </tbody>
</table>