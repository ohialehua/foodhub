<h2 class="mt-5">管理者ログイン</h2>

<%= form_with model: @admin, url: new_admin_session_path do |f| %>
  <table class="table table-borderless table-dark" style="opacity: 0.8;">
    <tbody>
      <tr>
        <th>メールアドレス</th>
        <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, size: 50, autocomplete: "email", class:"text-dark" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td>
          <div class="field">
            <%= f.password_field :password, size: 50, autocomplete: "current-password", class:"text-dark" %>
          </div>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>