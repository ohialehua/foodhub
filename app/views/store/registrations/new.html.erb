<h2 class="text-white">新規店舗登録</h2>

<%= form_with model: @store, url: store_registration_path, local: true do |f| %>
  <%= render "store/shared/error_messages", resource: resource %>
  <table class="table table-borderless table-dark" style="opacity: 0.8;">
    <tbody>
      <tr>
        <div class="field">
          <th>店名</th>
          <td>
            <%= f.text_field :name, autofocus: true, class: "name" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>フリガナ</th>
          <td>
            <%= f.text_field :name_kana, autofocus: true, class: "name" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>メールアドレス</th>
          <td colspan="2">
            <%= f.email_field :email, size: 78, autofocus: true, autocomplete: "email" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>郵便番号(ハイフンなし)</th>
          <td>
            <%= f.text_field :post_address, autofocus: true %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>住所</th>
          <td>
            <%= f.text_field :address, autofocus: true %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>電話番号(ハイフンなし)</th>
          <td>
            <%= f.text_field :phone_number, autofocus: true %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>パスワード(6文字以上)</th>
          <td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>パスワード(確認用)</th>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<t5>既に登録済みの方</t5>
<%= render "store/shared/links" %>からログインしてください。
