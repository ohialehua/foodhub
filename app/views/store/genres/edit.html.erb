<div class="container">
  <div class="row">
    <div class="col mt-3">
      <h2>店舗商品ジャンル編集</h2>
      <div class="mt-5">
        <%= form_with model: @genre, url: genre_path(@genre), local:true do |f| %>
          <p>ジャンル名
          <%= f.text_field :name %>
          <%= f.submit "変更を保存", class:"btn btn-success" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>