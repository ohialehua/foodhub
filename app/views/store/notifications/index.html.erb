<div class="container">
  <div class="row">
    <div class="col-11">
    <% if @notifications.exists? %>
      <table class="table table-dark">
      <% @notifications.each do |notification| %>
        <% if notification.action == 'done' %>
          <tr>
            <td><%= notification.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= notification.action %></td>
            <td><%= link_to 'show', store_store_order_path(notification.store_order) %></td>
          </tr>
        <% else %>
          <tr>
            <td><%= notification.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= notification.action %></td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
      </table>
    <% else %>
      <h4>通知はありません</h4>
    <% end %>
    </div>
  </div>
</div>