<div class="row">
  <div class="col m-3">
    <h2 class="mt-3">商品編集</h2><br>
    <div class="mx-auto">
      <%= form_with model: @item, url: store_item_path(@item), local:true do |f| %>
        <table class="table table-borderless table-dark" style="opacity: 0.8;">
          <tr>
            <th><%= f.label :商品画像 %></th>
            <td><%= f.attachment_field :image, class:"text-dark" %></td>
          </tr>
          <tr>
            <th><%= f.label :商品説明 %></th>
            <td><%= f.text_area :body, size:"60x5", class:"text-dark" %></td>
          </tr>
          <tr>
            <th><%= f.label :ジャンル %></th>
            <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}, class:"text-dark") %></td>
          </tr>
          <tr>
            <th><%= f.label :販売ステータス %></th>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
        </table>
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>