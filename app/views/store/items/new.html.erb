<div class="row">
  <div class="col m-3">
     <h2 class="mt-3">店舗商品新規登録</h2><br>
     <div class="row">
      <div class="mx-auto">
       <%= form_with model: @item, url: store_items_path, local:true do |f| %>
      <table class="table table-borderless table-dark" style="opacity: 0.8;">
      <tr>
       <th><%= f.label :商品画像 %></th>
       <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
       <th><%= f.label :商品名 %></th>
       <td><%= f.text_field :name, class:"text-dark" %></th>
      </tr>
      <tr>
       <th><%= f.label :商品説明 %></th>
       <td><%= f.text_area :body, size:"60x5", class:"text-dark" %></td>
      </tr>
      <tr>
       <th><%= f.label :ジャンル %></th>
       <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}, class:"text-dark") %></td>
      </tr>
      <tr>
       <th><%= f.label :税抜価格 %></th>
       <td><%= f.text_field :price_before_tax, class:"text-dark" %>円</td>
      </tr>
      <tr>
       <th><%= f.label :販売ステータス %></th>
       <td><%= f.radio_button :is_active, true %>
       <%= f.label :is_active, "販売中" %>
       <%= f.radio_button :is_active, false %>
       <%= f.label :is_active, "販売停止中" %>
      </tr>
       </td>
      </table>
       <%= f.submit '新規登録', class: 'btn btn-success', "data-confirm" => "商品名と金額は変更できません。今一度ご確認ください。" %>
      <% end %>
    </div>
   </div>
  </div>
</div>